<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Update Contact</h2>

      <!-- menampilkan pesan message dari flash -->
      <% if(typeof errors != "undefined") { %>
      <div class="alert alert-success" role="alert">
        <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
      </div>
      <% } %>

      <form method="post" action="/contact/update">
        <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>" />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama %>" />
        </div>
        <div class="mb-3">
          <label for="mobile" class="form-label">mobile</label>
          <input type="text" class="form-control" id="mobile" name="mobile" required value="<%= contact.mobile %>" />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="text" class="form-control" id="email" name="email" required value="<%= contact.email %>" />
        </div>
        <button type="submit" class="btn btn-success">Update Data</button>
      </form>
      <div class="mt-3">
        <a href="/contact" class="card-link mt-2" style="color: #198754">Back to Page Contact</a>
      </div>
    </div>
  </div>
</div>
