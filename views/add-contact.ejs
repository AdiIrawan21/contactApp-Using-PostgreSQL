<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Add new contact form</h2>

      <!-- Alert jika terdapat duplikat nama -->

      <% if(typeof errors != "undefined") { %>
      <div class="alert alert-success" role="alert">
        <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
      </div>
      <% } %>

      <!-- Form -->
      <form method="post" action="/contact">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input type="text" class="form-control" id="nama" name="nama" required />
        </div>
        <div class="mb-3">
          <label for="mobile" class="form-label">Mobile</label>
          <input type="text" class="form-control" id="mobile" name="mobile" required / r>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" required />
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
      <div class="mt-3">
        <a href="/contact" class="card-link mt-2" style="color: #198754">Back to Page Contact</a>
      </div>
      <!-- Akhir form -->
    </div>
  </div>
</div>
